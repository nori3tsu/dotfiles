#!/bin/bash -e

BREW_HOME=$(brew --prefix)

# Ruby
brew install rbenv
brew install ruby-build

# Golang
brew install go

# Java
brew install gradle

# Node.js
brew install node

# Erlang
brew install erlang
brew install tsung

# AWS
brew install awscli

# Tools
brew install zsh
brew install zsh-completions

brew install vim
brew install ctags

brew install tmux
brew install reattach-to-user-namespace

brew install git
brew install --default-names gnu-tar
brew install jq
brew install ngrep
brew install colordiff

